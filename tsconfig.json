  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": ".tscOutDir",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es2017"
    ]    
  },
  "exclude": [
    "node_modules"
  ]
}